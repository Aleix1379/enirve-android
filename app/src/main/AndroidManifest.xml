<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.aleixmp.enirve">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity
                android:name="com.aleixmp.enirve.ui.ChooseManualVerbsActivity"
                android:label="@string/title_activity_choose_manual_verbs"
                android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen">
        </activity>
        <activity
                android:name="com.aleixmp.enirve.ui.SelectionVerbsActivity"
                android:label="@string/app_title"
                android:screenOrientation="portrait">
        </activity>
        <activity
                android:name="com.aleixmp.enirve.ui.MainActivity"
                android:label="@string/app_name"
                android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>
